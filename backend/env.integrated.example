# ==================== JobHunt Backend - Integrated Mode ====================

# Server
NODE_ENV=development
PORT=8000

# Database (Docker Compose)
MONGO_URI=mongodb://admin:admin123@mongodb:27017/jobhunt?authSource=admin

# Database (Local Development)
# MONGO_URI=mongodb://localhost:27017/jobhunt_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT (MUST match Auth microservice)
JWT_SECRET=your_super_secret_jwt_key_here
SECRET_KEY=your_super_secret_jwt_key_here

# ==================== Microservices Integration ====================

# Auth Microservice
AUTH_SERVICE_URL=http://localhost:3001/api/v1
USE_AUTH_MICROSERVICE=true

# Notification Microservice
NOTIFICATION_SERVICE_URL=http://localhost:3003
USE_NOTIFICATION_MICROSERVICE=true

# Payment Microservice (Optional)
PAYMENT_SERVICE_URL=http://localhost:3002
USE_PAYMENT_MICROSERVICE=false

# Event Bus (RabbitMQ)
RABBITMQ_URL=amqp://admin:admin123@localhost:5672
USE_EVENT_BUS=true

# ==================== JobHunt Features ====================

# Cloudinary (File Storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Google Gemini AI (AI-powered features)
GEMINI_API_KEY=your_google_gemini_api_key

# ==================== Frontend ====================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ==================== Optional Features ====================

# Email (Fallback - if not using Notification microservice)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your_app_password

# LinkedIn Import (Optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

